<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">

    <ImageView
        android:layout_width="@dimen/layout_width_image"
        android:layout_height="@dimen/layout_height_image"
        android:src="@drawable/train_logo_black_90px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"
            android:text="Projektnamn"/>
        <TextView
            android:id="@+id/textViewSnippet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_snippet"
            android:textStyle="bold"
            android:text="Typ av delsystem"/>

        <!--
        <TextView
            android:id="@+id/number_of_objects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_snippet"
            android:textStyle="bold"
            android:text="Antal objekt"/>
            -->

    </LinearLayout>

</LinearLayout>