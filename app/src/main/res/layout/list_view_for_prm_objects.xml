<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_prm_ljudmatning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ljudm채tning"
                android:textSize="12sp"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/rb_prm_ljusmatning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:text="Ljusm채tning"/>

            <CheckBox
                android:id="@+id/checkbox_show_not_ready_objects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ej f채rdiga"
                android:textSize="12sp"
                android:buttonTint="@color/colorPrimary"
                />

            <CheckBox
                android:id="@+id/checkbox_show_ready_objects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="F채rdiga"
                android:textSize="12sp"
                android:buttonTint="@color/colorAccent"
                />
        </LinearLayout>
    </RelativeLayout>/

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listObjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add_new_object"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@drawable/adding"
            app:backgroundTint="@color/white" />
    </FrameLayout>
</LinearLayout>