<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <Button
            android:id="@+id/comments_for_spar_och_vaxlar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:background="@drawable/commentss_48px"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <CheckBox
                android:id="@+id/checkbox_show_not_ready_objects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ej färdiga"
                android:buttonTint="@color/colorPrimary"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"/>

            <CheckBox
                android:id="@+id/checkbox_show_ready_objects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Färdiga"
                android:buttonTint="@color/colorAccent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

    </RelativeLayout>/
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/green_search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/x_mark_96px"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Kunde inte hitta något"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@color/white"
            />

    </LinearLayout>
</LinearLayout>